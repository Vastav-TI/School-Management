<odoo>
    <!-- Form View for Student Grade -->
    <record id="view_student_grade_form" model="ir.ui.view">
        <field name="name">school.student.grade.form</field>
        <field name="model">school.student.grade</field>
        <field name="arch" type="xml">
            <form string="Student Grades">
                <sheet>
                    <group>
                        <field name="class_id"/>
                        <field name="student_grade_line_ids">
                            <tree editable="bottom">
                                <field name="student_id"/>
                                <field name="s_id"/>
                                <field name="grade"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
     <!-- Tree View for Student Grade -->
    <record id="view_student_grade_tree" model="ir.ui.view">
        <field name="name">school.student.grade.tree</field>
        <field name="model">school.student.grade</field>
        <field name="arch" type="xml">
            <tree>
                <field name="class_id"/>
                <field name="student_grade_line_ids"/>
            </tree>
        </field>
    </record>

        <!-- Action for Student Grade -->
    <record id="action_student_grade" model="ir.actions.act_window">
        <field name="name">Student Grades</field>
        <field name="res_model">school.student.grade</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>