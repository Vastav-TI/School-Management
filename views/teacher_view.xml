<odoo>
    <!-- Teacher Form View -->
    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">school.teacher.form</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>

                        <group>
                            <field name="photo" widget='image' options="{'size': [200, 200]}"/>
                        </group>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="salary" />
                            <field name="active" widget="toggle"/>
                            <!-- <field name="active" widget="badge" decoration-success="active" decoration-danger="active == False"/> -->
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="class_id"/>
                            <field name="subject_ids" widget='many2many_tags'/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Teacher Tree View -->
    <record id="view_teacher_tree" model="ir.ui.view">
        <field name="name">school.teacher.tree</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <tree string="Teachers">
                <field name="photo" widget="image" options="{'size': [200, 200]}"/>
                <field name="name"/>
                <field name="age"/>
                <field name="salary" />
                <field name="active" widget="boolean_toggle" />
                <!-- <field name="active"  decoration-success="active" decoration-danger="active==False" widget="badge"/> -->
                <field name="gender"/>
                <field name="class_id"/>
            </tree>
        </field>
    </record>


    <!-- kanban view for teachers -->
<record id="view_teacher_kanban" model="ir.ui.view">
    <field name="name">school.teacher.kanban</field>
    <field name="model">school.teacher</field>
    <field name="arch" type="xml">
        <kanban string="Teachers">
            <field name="name"/>
            <field name="age"/>
            <field name="salary"/>
            <field name="active"/>
            <field name="gender"/>
            <field name="class_id"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_global_click o_kanban_record" 
                         style="background-color:#a4e7f2; padding: 20px; box-sizing: border-box; height: 460px;">
                        <!-- Image -->
                        <div style="text-align: center; background-color:#a4e7f2; margin-bottom: 10px; height:200px;">
                            <img
                                t-att-src="kanban_image('school.teacher', 'photo', record.id.raw_value)"
                                alt="Teacher Photo"
                                style="
                                    width: 100%;
                                    height: 100%;
                                    object-fit: cover;
                                "
                            />
                        </div>
                        <!-- Content -->
                        <div class="oe_kanban_content" 
                             style="background-color: #bac6ea; padding: 10px; height: 200px; overflow-y: auto;">
                            <div style="margin-bottom: 10px">
                            <strong>Name:</strong> <field name="name"/><br/>
                            </div>
                            
                            <div style="margin-bottom: 10px">
                            <strong>Age:</strong> <field name="age"/><br/>
                            </div>
                            
                            <div style="margin-bottom: 10px">
                            <strong>Salary:</strong> <field name="salary"/><br/>
                            </div>
                            
                            <div style="margin-bottom: 10px">
                            <strong>Gender:</strong> <field name="gender"/><br/>
                            </div>
                            
                            <div style="margin-bottom: 10px">
                            <strong>Class:</strong> <field name="class_id"/><br/>
                            </div>
                            
                            <t t-if="record.active.raw_value">
                                <div style="text-align: center;">
                                    <button class="btn btn-success btn-sm">Active</button>
                                </div>
                            </t>
                            <t t-else="">
                                <div style="text-align: center;">
                                    <button class="btn btn-danger btn-sm">Inactive</button>
                                </div>
                            </t>
                        </div>
                    </div>
                </t>
            </templates>
            <kanban quick_create="0"/>
        </kanban>
    </field>
</record>





    <!-- Teacher Action -->
    <record id="action_teacher_list" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id" ref="view_teacher_tree"/>
    </record>
</odoo>
