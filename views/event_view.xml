<odoo>
    <!-- tree view accessible by both admin and user -->
    <record id="view_school_event_tree" model="ir.ui.view">
        <field name="name">school.event.tree</field>
        <field name="model">school.event</field>
        <field name="arch" type="xml">
            <tree string="School Events">
                <field name="name"/>
                <field name="event_type"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <!-- form view accessible only by the admn -->
    <record id="view_school_event_form" model="ir.ui.view">
        <field name="name">school.event.form</field>
        <field name="model">school.event</field>
        <field name="arch" type="xml">
            <form string="School Event" groups="base.group_erp_manager">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="event_type"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- adding action -->
    <record id="action_school_event" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="res_model">school.event</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
